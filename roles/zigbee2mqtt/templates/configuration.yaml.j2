homeassistant: true
frontend: true
mqtt:
  base_topic: zigbee2mqtt
  server: mqtt://mosquitto:1883
  user: {{ mqtt_user }}
  password: {{ mqtt_password }}
serial:
  port: /dev/ttyACM0
  adapter: ember
advanced:
  channel: 25
  network_key: '!secret.yaml network_key'
  pan_id: 35721
  ext_pan_id: [205, 157, 226, 53, 148, 87, 138, 3]
  homeassistant_legacy_entity_attributes: false
  legacy_api: false
  legacy_availability_payload: false
device_options:
  legacy: false
permit_join: false
groups: groups.yaml 
devices: devices.yaml
